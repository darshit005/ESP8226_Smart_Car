<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#55000000" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>
    
    <!-- Main knob with 3D gradient -->
    <item android:bottom="3dp" android:right="2dp" android:left="1dp" android:top="1dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.4"
                android:centerY="0.4"
                android:gradientRadius="30dp"
                android:startColor="#E0F7FA"
                android:centerColor="#00BCD4"
                android:endColor="#0097A7" />
            <stroke android:width="2dp" android:color="#B2EBF2" />
        </shape>
    </item>
    
    <!-- Highlight effect -->
    <item android:left="15dp" android:top="10dp" android:right="25dp" android:bottom="25dp">
        <shape android:shape="oval">
            <solid android:color="#55FFFFFF" />
        </shape>
    </item>
</layer-list>
