<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Button body with gradient -->
    <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#2979FF"
                android:centerColor="#1565C0"
                android:endColor="#0D47A1" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#64B5F6" />
        </shape>
    </item>
    
    <!-- Top highlight -->
    <item android:left="1dp" android:top="1dp" android:right="3dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"
                android:centerY="0.2" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Glow effect when pressed - this will be revealed on press -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3300B0FF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
